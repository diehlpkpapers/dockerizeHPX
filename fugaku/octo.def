Bootstrap: docker
From: centos:7
Stage: build

%environment
SPACK_PYTHON=python3.11
SPACK_ROOT=/opt/spack
export SPACK_ROOT
export PATH=$SPACK_ROOT/bin:$PATH
source /etc/profile.d/modules.sh
source $SPACK_ROOT/share/spack/setup-env.sh

%post

export SPACK_ROOT=/opt/spack
export SPACK_ROOT
export PATH=$SPACK_ROOT/bin:$PATH

yum -y update
yum -y install wget
yum -y install git 
yum -y groupinstall 'Development Tools'
yum -y install make cmake  bzip2-devel libffi-devel zlib-devel patchelf environment-modules
yum -y remove openssl openssl-devel

wget https://www.openssl.org/source/openssl-1.1.1w.tar.gz
tar xvf openssl-1.1.1w.tar.gz
cd openssl-1.1*/
./config --prefix=/usr/local/openssl --openssldir=/usr/local/openssl
make -j
make install
ldconfig

wget https://www.python.org/ftp/python/3.11.6/Python-3.11.6.tgz
tar xvf Python-3.11.6.tgz
cd Python-3.11*/
LDFLAGS="${LDFLAGS} -Wl,-rpath=/usr/local/openssl/lib" ./configure --with-openssl=/usr/local/openssl 
make
make altinstall

SPACK_PYTHON=python3.11

git clone --depth=100 --branch=releases/v0.20 https://github.com/spack/spack.git $SPACK_ROOT
. $SPACK_ROOT/share/spack/setup-env.sh

git clone https://github.com/G-071/octotiger-spack.git /opt/octotiger-spack
spack repo add /opt/octotiger-spack

spack compiler find


