Bootstrap: docker
From: fedora:37
Stage: build

%environment
#SPACK_PYTHON=python3.11
SPACK_ROOT=/opt/spack
export SPACK_ROOT
export PATH=$SPACK_ROOT/bin:$PATH
source /etc/profile.d/modules.sh
source $SPACK_ROOT/share/spack/setup-env.sh

%post

export SPACK_ROOT=/opt/spack
export SPACK_ROOT
export PATH=$SPACK_ROOT/bin:$PATH

dnf -y update
dnf -y install wget
dnf -y install git gnupg which
dnf -y groupinstall 'Development Tools'
dnf -y install make cmake  bzip2-devel libffi-devel zlib-devel patchelf environment-modules
dnf -y install gcc-c++
dnf -y install gcc-gfortran

gcc --version
g++ --version
gfortran --version

git clone --depth=100 --branch=releases/v0.20 https://github.com/spack/spack.git $SPACK_ROOT
. $SPACK_ROOT/share/spack/setup-env.sh

git clone https://github.com/G-071/octotiger-spack.git /opt/octotiger-spack
spack repo add /opt/octotiger-spack

spack compiler find --scope system $(which gcc)
spack compiler find --scope system $(which g++)
spack compiler find --scope system $(which gfortran)

spack compiler list 

# Install bzip
spack install bzip2%gcc@12.3.1

# Build Ocot-Tiger without mpi
spack -v  install -j 4 octotiger@0.10.0 +kokkos +kokkos_hpx_kernels simd_extension=SVE simd_library=STD build_type=Release %gcc@12.3.1 ^hpx malloc=jemalloc networking=none instrumentation=apex +generic_coroutines ^bzip2@1.0.6  ^silo~mpi

%labels
    Author Patrick Diehl
    Version v0.0.1

%help
Singularity image to compile Octo-Tiger via Spack
